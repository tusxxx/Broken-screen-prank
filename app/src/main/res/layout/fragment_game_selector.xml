<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameSelectorFragment">

    <ImageButton
        android:id="@+id/btBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btBreakedScreen"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="80dp"
        android:drawableEnd="@drawable/ic_launcher_background"
        android:text="Сломанный экран"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSnake"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:drawableEnd="@drawable/ic_launcher_background"
        android:text="Змея на экране"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btBreakedScreen"/>

    <Button
        android:id="@+id/btHairClipper"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:drawableEnd="@drawable/ic_launcher_background"
        android:text="Машинка для\nстрижки волос"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btSnake"/>

</androidx.constraintlayout.widget.ConstraintLayout>